{
  "name": "app",
  "type": "module",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.4",
    "@popperjs/core": "^2.11.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "autoprefixer": "^10.4.18",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "rollup": "^4.12.1",
    "sass": "^1.71.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2"
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs rollup.config.js",
    "build:css:compile": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --load-path=vendor/assets",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "lint": "prettier --check --ignore-path .gitignore --config .prettierrc.json \"**/*.{rb,html,scss,css,js,json,yml}\"",
    "lint:fix": "prettier --write --ignore-path .gitignore --config .prettierrc.json \"**/*.{rb,html,scss,css,js,json,yml}\"",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\""
  },
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "@types/bootstrap": "^5.2.10",
    "prettier": "^3.2.5"
  }
}
